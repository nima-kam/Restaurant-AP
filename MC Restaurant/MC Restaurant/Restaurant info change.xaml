        <TextBlock Foreground="Cyan" FontSize="13" FontWeight="DemiBold" Text="Address:" Margin="48,226,338.8,59.6"/>
        <TextBox x:Name="ResAddressBox" Margin="109,222,183.2,0" Height="27" VerticalAlignment="Top" />
        <CheckBox x:Name="ResNumberCheck" Content="Change Number" Margin="280,117,31.8,171" Foreground="GreenYellow"/>
        <CheckBox x:Name="ResRegionCheck" Content="Change region" Margin="280,173,31.8,109" Foreground="#FF5706CD"/>
        <CheckBox x:Name="ResAddressCheck" Content="Change Address" Margin="279,228,32.8,49" Foreground="#FF2CEAFF"/>
        <Button x:Name="loginbutton" Content="sign in" Background="#FFFFC65B" Click="loginbutton_Click" Margin="0,273,219.8,16" IsDefault="True" HorizontalAlignment="Right" Width="78"/>

    </Grid>
