<Window x:Class="MC_Restaurant.Restaurant_info_change"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MC_Restaurant"
        mc:Ignorable="d"
        Title="Restaurant_info_change" Height="349.293" Width="450.994">
    <Grid >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFFF0505" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Margin="13,13,171.8,220.4" Foreground="#fc1" FontSize="22"><Run Text="Restaurant inforamation">
                <Run.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFFC0E0E" Offset="0.9"/>
                    </LinearGradientBrush>
                </Run.Background>
            </Run></TextBlock>
        <!--Name-->
        <CheckBox x:Name="ResNameCheck" Content="Change Name" Margin="280,67,42.8,219" Foreground="#FFFFED01"/>
        <TextBlock Foreground="Yellow" FontSize="13" FontWeight="DemiBold" Text="Name:" Margin="60,63,325.8,214.4"/>
        <TextBox x:Name="RestaurantNameBox" Margin="109,61,183.2,0" Height="27" VerticalAlignment="Top" />
