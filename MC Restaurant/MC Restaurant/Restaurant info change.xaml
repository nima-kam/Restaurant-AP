        <TextBlock Foreground="GreenYellow" FontSize="13" FontWeight="DemiBold" Text="PhoneNumber:" Margin="8,115,339.8,177.4"/>
        <TextBox x:Name="ResPhonenumberBox" Margin="109,112,183.2,0" Height="27" VerticalAlignment="Top" />
