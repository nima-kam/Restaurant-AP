<Window x:Class="MC_Restaurant.Managment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MC_Restaurant"
        mc:Ignorable="d"
        Title="Managment" Height="500" Width="450.976">

    <Grid  VerticalAlignment="Top" Height="470" Margin="0,0,-0.2,0" >
        <Grid.Background>
            <LinearGradientBrush StartPoint="1 0" EndPoint=" 1 1" >
                <GradientStop Color="Beige" Offset="0" />
                <GradientStop Color="Khaki" Offset="0.5" />

                <GradientStop Color="YellowGreen" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <Border BorderThickness="2" BorderBrush="Black" Margin="0,0,19,191" RenderTransformOrigin="0.501,0.501">

            <Button x:Name="AddFoodButton" Content="New" Margin="15.4,87.4,340,161.6" Click="AddFoodButton_Click"/>

        </Border>
        <Button x:Name="EditButton" Content="Edit " Margin="15,146,363,297" Click="EditButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete" Margin="15,210,362,234" Click="DeleteButton_Click"/>

        <ListBox x:Name="ChangeFoodList" Margin="99,83,32,209"/>
        <ScrollBar Margin="427,1,0.8,0"/>
        <Label Content="Changing food menu"  HorizontalAlignment="Left" FontSize="13" FontWeight="DemiBold" VerticalAlignment="Top" Margin="2,1,0,0" Width="159" Height="52"/>
        <Button x:Name="ShowDateButton" Content="show" Margin="345,48,33,395" Click="ShowDateButton_Click"/>
        <TextBlock FontSize="12" FontWeight="Medium" Text="Date :" Margin="101,52,255,387"/>


    </Grid>
</Window>
