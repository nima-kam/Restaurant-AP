                <GradientStop Color="YellowGreen" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Calendar x:Name="manageCalendar" DisplayMode="Month" SelectionMode="SingleDate" BorderThickness="2" Margin="-1,-4,273.8,264" >            
